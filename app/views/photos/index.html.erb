<div class="container all-photo-container no-padding">
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-sm-4 picture-div">
        <%= link_to image_tag(photo.picture), user_photo_path(photo.user, photo) %>
      <p><%= photo.user.name %></p>
      <p class="picture-description"><%= photo.description %></p>
    </div>
    <% end %>
  </div>
</div>
